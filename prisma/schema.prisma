generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model videogames {
  id             String    @id @default(auto()) @map("_id") @db.ObjectId
  title          String?
  releaseDate    DateTime? @db.Date
  genre          String?
  platform       String?
  publisher      String?
  developer      String?
  rating         Float?
  price          Float?
  description    String?
  multiplayer    Boolean?
  completed      Boolean?
  hoursPlayed    Int?
  difficulty     Int?
  replayValue    Int?
  primaryColor   String?
  secondaryColor String?
}
